RUN cd /usr/x86_64-w64-mingw32/ && curl -L http://repo.msys2.org/mingw/x86_64/mingw-w64-x86_64-gtk3-3.22.26-1-any.pkg.tar.xz | unxz | tar x
RUN cd /usr/x86_64-w64-mingw32/ && curl -L http://repo.msys2.org/mingw/x86_64/mingw-w64-x86_64-libgee-0.20.0-2-any.pkg.tar.xz | unxz | tar x
RUN cd /usr/x86_64-w64-mingw32/ && curl -L http://repo.msys2.org/mingw/x86_64/mingw-w64-x86_64-libzip-1.3.0-1-any.pkg.tar.xz | unxz | tar x
RUN cd /usr/x86_64-w64-mingw32/ && cp -R mingw64/* ./ && rm -rf mingw64/
RUN ln -s /usr/x86_64-w64-mingw32/ /mingw64

# build glib for win64
RUN cd /tmp && curl -L https://ftp.gnome.org/pub/gnome/sources/glib/2.55/glib-2.55.1.tar.xz | unxz | tar x && \
    cd /tmp/glib-2.55.1 && \
    ./configure --host=x86_64-w64-mingw32 --prefix=/usr/x86_64-w64-mingw32/ --with-threads=win32 && \
    make && \
    make install && \
    rm -rf /tmp/glib-2.55.1

RUN cd /tmp && \
    curl http://www.digip.org/jansson/releases/jansson-2.10.tar.gz | tar zx && \
    cd jansson-2.10 && \
    ./configure --host=x86_64-w64-mingw32 --prefix=/usr/x86_64-w64-mingw32/ && \
    make && \
    make install && \
    cd /tmp && \
    rm -rf jansson-2.10

RUN apt-get install -y gsettings-desktop-schemas

VOLUME /source
